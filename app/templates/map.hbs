<div class="display-box">
  <div class="text-entry">
      Test Value: My Home
      <br>
      <input type="text" class="form-control" name="locGive" placeholder="Please Enter Location Name." autofocus="autofocus">
      <br>
      <input type="text" class="form-control" name="locGive" placeholder="Please Enter Address.">
      <br>
      <input type="submit" value="Submit Address" id="mapMarkerSubmit">  
  </div>
  {{#leaflet-map lat=lat lng=lng zoom=zoom}}
    {{tile-layer url="http://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}.png"}}
    {{#if updateCheck}}
      {{#marker-layer location=locCoordinates}}
        {{#popup-layer}}
          {{locName}}
        {{/popup-layer}}
      {{/marker-layer}}
    {{/if}}
  {{/leaflet-map}}
</div>

